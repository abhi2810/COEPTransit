<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/card_margin"
        android:elevation="3dp"
        card_view:cardCornerRadius="@dimen/card_album_radius"
        android:backgroundTint="@color/cardview_light_background">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp">

            <TextView
                android:id="@+id/fid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="Friend Id"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/fname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/id"
                android:layout_marginTop="23dp"
                android:text="Name"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/femail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/fname"
                android:layout_marginTop="27dp"
                android:text="Email"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/fmode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/femail"
                android:layout_marginTop="23dp"
                android:text="Mode of transport"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/fadd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/fmode"
                android:layout_marginTop="28dp"
                android:text="Address"
                android:textSize="15dp" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/req"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/req"
                android:tag="Request"
                android:layout_alignTop="@+id/femail"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="29dp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/fmode"
                android:text="Accept/Request" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>