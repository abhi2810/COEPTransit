<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.co.onetwork.coeptransit.Setting"    >

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:weightSum="3">


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/near"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="30dp"

        android:onClick="nearby"
        android:src="@drawable/nearbyf"
        />



        <android.support.design.widget.FloatingActionButton
            android:id="@+id/acc"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="30dp"

            android:onClick="pending"
            android:src="@drawable/pend" />

        <android.support.design.widget.FloatingActionButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="30dp"

            android:onClick="update"
            android:src="@drawable/update1" />

        <android.support.design.widget.FloatingActionButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="30dp"

            android:onClick="friends"
            android:src="@drawable/friendd" />

</LinearLayout>
</ScrollView>
</LinearLayout>